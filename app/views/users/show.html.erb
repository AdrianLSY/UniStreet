<br>
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          <div class="row">
            <div class="col-md-11"><h3><%= @user.first_name %> <%= @user.last_name %></h3></div>
            <% if current_user.sas_admin? or current_user == @user %>
              <div><%= link_to 'Edit', edit_user_path, method: :get, class: "btn btn-outline-primary"%></div>
            <% end %>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Title</h5></div>
            <div class="col-md-8"><h5><%= @user.title.titleize %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>First name</h5></div>
            <div class="col-md-8"><h5><%= @user.first_name %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Last name</h5></div>
            <div class="col-md-8"><h5><%= @user.last_name %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Email</h5></div>
            <div class="col-md-8"><h5><%= @user.email %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Gender</h5></div>
            <div class="col-md-8"><h5><%= @user.gender.titleize %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Date of birth</h5></div>
            <div class="col-md-8"><h5><%= @user.birthdate.strftime("%d/%m/%Y") %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Address</h5></div>
            <div class="col-md-8"><h5><%= @user.address %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Phone number</h5></div>
            <div class="col-md-8"><h5><%= @user.phone %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>Nationality</h5></div>
            <div class="col-md-8"><h5><%= @user.nationality.titleize %></h5></div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-3 text-primary"><h5>NRIC / Passport</h5></div>
            <div class="col-md-8"><h5><%= @user.nric_passport %></h5></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render template: 'qualifications/index' %>
