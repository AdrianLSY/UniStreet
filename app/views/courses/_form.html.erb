<%= form_with(model: course, local: true) do |form| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">New Course</h4>
      </div>
      <div id="c_form-h" class="m-3">
        <div class="form-group row"> <label for="name" class="col-2 col-form-label">Name</label>
          <div class="col-10">
            <%= form.text_field :name, class:"form-control", id:"name", placeholder:"Enter course name"%>
          </div>
        </div>
        <div class="form-group row"> <label for="intake" class="col-2 col-form-label">Intake</label>
          <div class="col-10">
            <%= form.text_field :intake, class:"form-control", id:"intake", placeholder:"Enter intake"%>
          </div>
        </div>
        <div class="form-group row"> <label for="inputpasswordh" class="col-2 col-form-label">University</label>
          <div class="col-10">
            <%= form.collection_select :university_id, University.order(:name), :id, :name, {include_blank: true}, {class:"form-control"}%>
          </div>
        </div>
        <hr>
        <div class="row">
          <div class="col col-lg-3">
            Credits
          </div>
          <div class="col-sm">
            English
          </div>
          <div class="col-sm">
            Math
          </div>
          <div class="col-sm">
            Science
          </div>
        </div>
        <div class="row">
          <div class="col col-lg-3">
            <%= form.select :credit_amount_req, options_for_select(0..5), {}, {:class => "form-control"}%>
          </div>
          <div class="col-sm">
            <%= form.select(:english_grade_req, Course.english_grade_reqs.keys.map {|grade| [grade.titleize,grade]}, {}, {:class => "form-control"})%>
          </div>
          <div class="col-sm">
            <%= form.select(:math_grade_req, Course.math_grade_reqs.keys.map {|grade| [grade.titleize,grade]}, {}, {:class => "form-control"})%>
          </div>
          <div class="col-sm">
            <%= form.select :science_amount_req, options_for_select(0..3), {}, {:class => "form-control"} %>
          </div>
        </div>
        <hr>
        Description
        <%= form.text_area :description, cols:"30", rows:"10", class:"form-control", id:"phone", placeholder:"Enter description..."%>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <%= form.submit "Submit", class:"btn btn-default modal-title w-100 font-weight-bold" %>
      </div>
    </div>
  </div>
<% end %>
