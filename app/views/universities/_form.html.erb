<%= form_with(model: university, local: true) do |form| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content" style="">
      <div class="modal-header text-center">
        <h4 class="modal-title w-100 font-weight-bold">New University</h4>
      </div>
      <div id="c_form-h" class="m-3">
        <div class="form-group row"> <label for="name" class="col-2 col-form-label">Name </label>
          <div class="col-10">
            <%=form.text_field :name, class:"form-control", id:"name", placeholder:"University Name"%>
          </div>
        </div>
        <div class="form-group row"> <label for="address" class="col-2 col-form-label">Address</label>
          <div class="col-10">
            <%=form.text_field :address, class:"form-control", id:"address", placeholder:"Enter address"%>
          </div>
        </div>
        <div class="form-group row"> <label for="phone" class="col-2 col-form-label">Phone</label>
          <div class="col-10">
            <%= form.number_field :phone, class:"form-control", id:"phone", placeholder:"Enter phone number"%>
          </div>
        </div>
        <div class="form-group row"> <label for="email" class="col-2 col-form-label">E-mail</label>
          <div class="col-10">
            <%= form.text_field :email, class:"form-control", id:"email", placeholder:"Enter email address"%>
          </div>
        </div>
        Description
        <%= form.text_area :description, cols:"30", rows:"10", class:"form-control", id:"phone", placeholder:"Enter description..."%>
      </div>
      <div class="modal-footer d-flex justify-content-center">
        <%= form.submit "Submit", class:"btn btn-default modal-title w-100 font-weight-bold" %>
      </div>
    </div>
  </div>
<% end %>


